<%= form_for @place do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :region %>
    <%= f.select(:region, options_for_select([['Africa'], ['Americas'], ['Asia'], ['Australia/S. Pacific'], ['Europe'], ['Middle East'], ['Antarctica']])) %>
  </p>

  <p>
    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
  </p>

  <p>
    <%= f.label :longitude %>
    <%= f.text_field :longitude %>
  </p>

  <p>
    <%= f.submit :submit %>
  </p>

<% end %>