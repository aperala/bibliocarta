$ -> 
  
    setPopups = (e) ->
      marker = e.layer
      properties = marker.feature?.properties

      popupContent = '<div class="popup">' +
                        '<a href="/places/' + properties?.id + '">' + 
                        '<h4>' + properties?.name + ' (click for more)</h4>' +
                        '</a>' +
                        '<p>' + properties?.books + ' items found</p>' +
                      '</div>'

      if marker.bindPopup?
        marker.bindPopup popupContent,
          closeButton: true
          minWidth: 200


    $.getJSON '/places.json', (geojson) ->
      L.mapbox.accessToken = '<%= ENV["MAPBOX_TOKEN"] %>'
      map = L.mapbox.map('map', 'anitap.2b45a7d5', tileLayer:
                        continuousWorld: false
                        noWrap: true
                        zoomControl: false
                        )
                    .setView([40, 0], 2)
                    .on('layeradd', setPopups)
                    .dragging.disable()
                    .featureLayer.setGeoJSON(geojson)
                    .touchZoom.disable()
                    .scrollWheelZoom.disable()
      
