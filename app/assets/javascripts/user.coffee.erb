$ -> 

  setPopups = (e) ->
    marker = e.layer
    properties = marker.feature?.properties

    popupContent = '<div class="popup">' +
                      '<a href="/places/' + properties?.id + '" target="_blank">' +
                      '<h2>' + properties?.name + '</h2>' +
                      '</a>' +
                      '<p>Books logged: ' + properties?.total +
                      '<ul class="user-books">' + properties?.titles + '</ul></p>' +
                    '</div>'

    if marker.bindPopup?
      marker.bindPopup popupContent,
        closeButton: true
        minWidth: 200

  $.getJSON '<%= Rails.application.routes.url_helpers.user_path([:id]) %>'.json, (geojsonuser) ->
    L.mapbox.accessToken = '<%= ENV["MAPBOX_TOKEN"] %>'
    map = L.mapbox.map('map_user', 'anitap.2b45a7d5', tileLayer:
                      continuousWorld: false
                      noWrap: true
                      )
                  .setView([40, 0], 2)
                  .on('layeradd', setPopups)
                  .featureLayer.setGeoJSON(geojsonuser)
                  .dragging.disable()
                  .touchZoom.disable()

  window.twttr = ((d, s, id) ->
    js = undefined
    fjs = d.getElementsByTagName(s)[0]
    t = window.twttr or {}
    if d.getElementById(id)
      return t
    js = d.createElement(s)
    js.id = id
    js.src = 'https://platform.twitter.com/widgets.js'
    fjs.parentNode.insertBefore js, fjs
    t._e = []

    t.ready = (f) ->
      t._e.push f
      return

    t
  )(document, 'script', 'twitter-wjs')

  $('.sliding-panel-button,.sliding-panel-fade-screen,.sliding-panel-close').on 'click touchstart', (e) ->
    $('.sliding-panel-content,.sliding-panel-fade-screen').toggleClass 'is-visible'
    e.preventDefault()
    return
  return
